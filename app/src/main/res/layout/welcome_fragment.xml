<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/top_container"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="6"
        android:orientation="horizontal">

        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/top_left1"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/top_left2"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/top_left3"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/top_left4"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/top_left5"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/top_container"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="-202dp"
        android:text="Start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/bottom_container"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="6"
        android:orientation="horizontal">

        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/bottom_left1"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/bottom_left2"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/bottom_left3"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/bottom_left4"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:id="@+id/bottom_left5"
            android:src="@drawable/back"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lblWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="57dp"
        android:layout_marginBottom="396dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Welcome" />

    <Button
        android:id="@+id/btnHit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@id/btnStart"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="129dp"
        android:text="Hit" />

    <Button
        android:id="@+id/btnStay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@id/btnHit"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="26dp"
        android:text="Stay" />

    <Button
        android:id="@+id/btnAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/btnStart"
        android:layout_marginStart="79dp"
        android:layout_marginTop="236dp"
        android:text="Play Again" />


</RelativeLayout>